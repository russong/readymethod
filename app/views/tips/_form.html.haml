= form_for @tip do |f|
  -if @tip.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tip.errors.count, "error")} prohibited this tip from being saved:"
      %ul
        - @tip.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :activity_id
    = f.number_field :activity_id
  .field
    = f.label :approved
    = f.check_box :approved
  .actions
    = f.submit 'Save'
